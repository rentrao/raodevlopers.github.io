            { id: "ford-ecosport-2021", name: "Ford EcoSport", class: "SUV", year: 2021, fuel: "Diesel", transmission: "Manual", seating: 5, dailyRate: 3200, hourlyRate: 160, freeKmsPerDay: 250, extraPerKm: 14, deposit: 5000, badges: ["Unlimited km", "Diesel"], image: "https://placehold.co/400x300/E2E8F0/475569?text=EcoSport" },
            { id: "mahindra-scorpio-2022", name: "Mahindra Scorpio", class: "SUV", year: 2022, fuel: "Diesel", transmission: "Manual", seating: 7, dailyRate: 5000, hourlyRate: 250, freeKmsPerDay: 300, extraPerKm: 18, deposit: 8000, badges: ["7 Seater", "Powerful"], image: "https://placehold.co/400x300/E2E8F0/475569?text=Scorpio" },
            { id: "citroen-basalt-2024", name: "Citroën Basalt", class: "SUV", year: 2024, fuel: "Petrol", transmission: "Automatic", seating: 5, dailyRate: 3200, hourlyRate: 170, freeKmsPerDay: 250, extraPerKm: 15, deposit: 5000, badges: ["Stylish", "Automatic"], image: "https://placehold.co/400x300/E2E8F0/475569?text=Citroen+Basalt" },
            { id: "maruti-fronx-2024", name: "Maruti Suzuki Fronx", class: "Micro SUV", year: 2024, fuel: "Petrol", transmission: "Automatic", seating: 5, dailyRate: 2800, hourlyRate: 150, freeKmsPerDay: 200, extraPerKm: 13, deposit: 4000, badges: ["Modern", "Mileage"], image: "https://placehold.co/400x300/E2E8F0/475569?text=Fronx" },
        ];
        
        // --- GLOBAL STATE ---
        const state = {
            currentPage: 'home',
        };

        // --- RENDER FUNCTIONS ---
        const renderCarCard = (car, index = 0) => {
            const whatsappText = encodeURIComponent(`Hi Carorent, I want to book the ${car.name}.`);
            const whatsappUrl = `https://wa.me/918901663844?text=${whatsappText}`;

            return `
                <div class="car-card bg-white rounded-3xl shadow-xl overflow-hidden" data-aos="fade-up" data-aos-delay="${index * 100}">
                    <div class="relative">
                        <img src="${car.image}" alt="${car.name}" class="w-full h-56 object-cover" loading="lazy">
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-bold text-carorent-600">
                            ${car.class}
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-slate-800 mb-2">${car.name}</h3>
                        <p class="text-sm text-slate-500 mb-4">${car.year} • ${car.fuel} • ${car.transmission}</p>
                        
                        <div class="flex flex-wrap gap-2 mb-4">
                            ${car.badges.map(badge => `<span class="bg-carorent-100 text-carorent-700 text-xs font-semibold px-3 py-1 rounded-full">${badge}</span>`).join('')}
                        </div>
                        
                        <div class="space-y-2 text-sm text-slate-600 mb-6">
                            <div class="flex justify-between">
                                <span>Seating:</span>
                                <span class="font-semibold">${car.seating} Seats</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Free KMs:</span>
                                <span class="font-semibold">${car.freeKmsPerDay}/day</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Deposit:</span>
                                <span class="font-semibold">₹${car.deposit.toLocaleString('en-IN')}</span>
                            </div>
                        </div>
                        
                        <div class="text-center mb-6">
                            <div class="text-3xl font-black gradient-text">₹${car.dailyRate.toLocaleString('en-IN')}</div>
                            <div class="text-sm text-slate-500">per day</div>
                        </div>
                        
                        <div class="grid grid-cols-2 gap-3">
                            <a href="#" data-page="cars" class="text-center bg-slate-100 text-slate-800 px-4 py-3 rounded-xl font-bold hover:bg-slate-200 transition-all focusable">
                                Details
                            </a>
                            <a href="${whatsappUrl}" target="_blank" class="text-center gradient-bg text-white px-4 py-3 rounded-xl font-bold hover:opacity-90 transition-all focusable">
                                Book Now
                            </a>
                        </div>
                    </div>
                </div>
            `;
        };
        
        // --- PAGE INITIALIZATION LOGIC ---
        const pageInitializers = {
            home: () => {
                console.log('Initializing Home Page');
                const featuredCarsGrid = document.getElementById('featured-cars-grid');
                if (featuredCarsGrid) {
                    featuredCarsGrid.innerHTML = CARS_DATA.slice(0, 8).map((car, index) => renderCarCard(car, index)).join('');
                }
                initTestimonialSlider();
                initDatePicker();
                
                // Initialize AOS animations
                AOS.refresh();
            },
            cars: () => {
                console.log('Initializing Cars Page');
                const carsPageGrid = document.getElementById('cars-page-grid');
                 if (carsPageGrid) {
                    carsPageGrid.innerHTML = CARS_DATA.map((car, index) => renderCarCard(car, index)).join('');
                }
                AOS.refresh();
            },
            packages: () => {
                console.log('Initializing Packages Page');
                AOS.refresh();
            },
            partner: () => {
                console.log('Initializing Partner Page');
                AOS.refresh();
            },
            about: () => {
                console.log('Initializing About Page');
                AOS.refresh();
            },
            contact: () => {
                console.log('Initializing Contact Page');
                AOS.refresh();
            },
            faq: () => {
                console.log('Initializing FAQ Page');
                AOS.refresh();
            },
            terms: () => {
                console.log('Initializing Terms Page');
                AOS.refresh();
            },
            privacy: () => {
                console.log('Initializing Privacy Page');
                AOS.refresh();
            },
            cancellation: () => {
                console.log('Initializing Cancellation Page');
                AOS.refresh();
            },
            damage: () => {
                console.log('Initializing Damage Page');
                AOS.refresh();
            },
        };

        // --- NAVIGATION / ROUTER ---
        const mainContent = document.getElementById('main-content');
        
        const navigateTo = (pageName) => {
            state.currentPage = pageName;
            const template = document.getElementById(`${pageName}-page-template`);
            if (template) {
                mainContent.innerHTML = '';
                mainContent.appendChild(template.content.cloneNode(true));
                window.scrollTo({ top: 0, behavior: 'smooth' });
                
                // Run page-specific JS
                if (pageInitializers[pageName]) {
                    setTimeout(() => pageInitializers[pageName](), 100);
                }
            } else {
                console.error(`Template for page "${pageName}" not found.`);
                if (pageName !== 'home') navigateTo('home');
            }
        };

        // --- UI COMPONENT LOGIC ---
        function initTestimonialSlider() {
            const slider = document.getElementById('testimonial-slider');
            const dots = document.querySelectorAll('.testimonial-dot');
            if (!slider || !dots.length) return;

            let currentIndex = 0;
            const totalSlides = dots.length;

            const updateSlider = () => {
                slider.style.transform = `translateX(-${currentIndex * 100}%)`;
                dots.forEach((dot, index) => {
                    if (index === currentIndex) {
                        dot.classList.remove('bg-slate-300');
                        dot.classList.add('bg-carorent-500');
                    } else {
                        dot.classList.remove('bg-carorent-500');
                        dot.classList.add('bg-slate-300');
                    }
                });
            };

            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    currentIndex = index;
                    updateSlider();
                });
            });

            // Auto-slide every 5 seconds
            setInterval(() => {
                currentIndex = (currentIndex + 1) % totalSlides;
                updateSlider();
            }, 5000);
            
            updateSlider();
        }

        function initDatePicker() {
            const dateRangePicker = document.getElementById('date-range');
            if (dateRangePicker) {
                flatpickr(dateRangePicker, {
                    mode: "range",
                    minDate: "today",
                    dateFormat: "d M, Y",
                });
            }
        }
        
        // --- EVENT LISTENERS ---
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize AOS
            AOS.init({
                duration: 800,
                easing: 'ease-out-cubic',
                once: true,
                offset: 50
            });
            
            // Set current year in footer
            document.getElementById('current-year').textContent = new Date().getFullYear();

            // Setup navigation
            document.body.addEventListener('click', (e) => {
                const target = e.target.closest('[data-page]');
                if (target) {
                    e.preventDefault();
                    const pageName = target.dataset.page;
                    navigateTo(pageName);
                    
                    // Close mobile menu if open
                    const mobileMenu = document.getElementById('mobile-menu');
                    if (mobileMenu) {
                        mobileMenu.classList.add('hidden');
                    }
                }
            });
            
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            if(mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
            }

            // Header scroll effect
            const header = document.getElementById('main-header');
            let lastScrollY = window.scrollY;
            
            window.addEventListener('scroll', () => {
                const currentScrollY = window.scrollY;
                
                if (currentScrollY > 100) {
                    header.classList.add('bg-white/95', 'shadow-lg');
                } else {
                    header.classList.remove('bg-white/95', 'shadow-lg');
                }
                
                lastScrollY = currentScrollY;
            });

            // Initial page load
            navigateTo('home');
        });
    </script>
</body>
</html>
